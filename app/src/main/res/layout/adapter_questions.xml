<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#f8f9fa"
        android:backgroundTint="#f8f9fa"
        android:elevation="8dp"
        android:padding="10dp"
        android:translationZ="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:maxLines="3"
            android:minLines="1"
            android:padding="15dp"
            android:singleLine="false"
            android:text="Q1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_question_desc"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:maxLines="3"
            android:minLines="1"
            android:padding="15dp"
            android:singleLine="false"
            android:text="Question appears here"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/im_ques"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/tv_question_desc"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"/>

            <RadioGroup
                android:id="@+id/rg_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="-2dp"
                android:layout_below="@id/im_ques"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="Answer 1"
                    android:textSize="12sp"
                    android:singleLine="false"
                    android:textColor="#000"/>

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="Answer 2"
                    android:textSize="12sp"
                    android:singleLine="false"
                    android:textColor="#000" />

                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="Answer 3"
                    android:singleLine="false"
                    android:textColor="#000" />

                <RadioButton
                    android:id="@+id/rb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="Answer 4"
                    android:textSize="12sp"
                    android:singleLine="false"
                    android:textColor="#000" />
            </RadioGroup>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>